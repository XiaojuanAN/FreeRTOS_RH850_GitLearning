{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "all"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "Download",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "flash"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "Build"
            ]
        },
        {
            "label": "Erase",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "erase"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMake Generate",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-Bbuild",
                "-DCMAKE_TOOLCHAIN_FILE='cmake/${input:toolchainType}.cmake'",
                "-DCMAKE_BUILD_TYPE=${input:buildType}",
                "-GNinja",
            ],
            "problemMatcher": [],
            "dependsOn": [
                "CMake Remove Cache"
            ]
        },
        {
            "label": "CMake Remove Cache",
            "type": "shell",
            "command": "rm",
            "args": [
                "build/CMakeCache*"
            ],
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "toolchainType",
            "description": "Which toolchain do you want to use?",
            "type": "pickString",
            "options": [
                "GCC",
                "IAR",
                "CCRH"
            ],
            "default": "GCC",
        },
        {
            "id": "buildType",
            "description": "Which build type do you want to use?",
            "type": "pickString",
            "options": [
                "Debug",
                "Release",
                "RelWithDebInfo",
                "MinSizeRel"
            ],
            "default": "Debug",
        }
    ],
    "options": {
        "env": {
            "path": "D:/v850-elf-gcc-win32-x64/bin;C:/Program Files (x86)/IAR Systems/Embedded Workbench 8.1/rh850/bin;C:/Program Files (x86)/Renesas Electronics/CS+/CC/CC-RH/V2.04.00/bin;C:/Program Files (x86)/Renesas Electronics/Programming Tools/Renesas Flash Programmer V3.08;${env:path}"
        }
    }
}
